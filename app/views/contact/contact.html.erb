<div class="container contact-form">
    <div class="contact-image">
    </div>
    <form method="post">
        <h3>Laissez-nous un message !</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="txtName">Votre nom *</label>
                    <input type="text" name="txtName" id="txtName" class="form-control" placeholder="Votre nom *" value="" />
                </div>
                <div class="form-group">
                    <label for="txtEmail">Votre adresse email *</label>
                    <input type="text" name="txtEmail" id="txtEmail" class="form-control" placeholder="Votre adresse email *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="Envoyer" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="txtMsg">Votre message *</label>
                    <textarea name="txtMsg" id="txtMsg" class="form-control" placeholder="Votre message *" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    </form>
</div>
