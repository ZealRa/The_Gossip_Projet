<!-- app/views/sessions/new.html.erb -->
<h1>Connexion</h1>

<%= form_with(url: login_path, method: "post") do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Se connecter" %>
  </div>
<% end %>
